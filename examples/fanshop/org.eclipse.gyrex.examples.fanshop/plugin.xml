<plugin>
   <extension
         point="org.eclipse.gyrex.boot.serverroles">
      <role
            id="org.eclipse.gyrex.examples.fanshop"
            name="Eclipse Fan Shop">
         <requireBundle
               symbolicName="org.eclipse.gyrex.examples.fanshop">
         </requireBundle>
         <requireBundle
               symbolicName="org.eclipse.gyrex.cds.model.solr">
         </requireBundle>
         <requireBundle
               symbolicName="org.eclipse.gyrex.cds.service.solr">
         </requireBundle>
         <requireBundle
               symbolicName="org.eclipse.gyrex.persistence.solr">
         </requireBundle>
      </role>
   </extension>
   <extension
         point="org.eclipse.gyrex.admin.configuration.wizard">
      <step
            class="org.eclipse.gyrex.examples.fanshop.internal.setup.FanShopSetupStep"
            id="org.eclipse.gyrex.examples.fanshop.setup">
      </step>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.gyrex.boot.server"
            name="Gyrex Fanshop">
      </product>
   </extension>

</plugin>
