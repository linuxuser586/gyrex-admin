<plugin>

   <extension
         point="org.eclipse.rap.ui.entrypoint">
      <entrypoint
            class="org.eclipse.cloudfree.admin.web.rap.internal.AdminRapApplication"
            parameter="admin"
            id="org.eclipse.cloudfree.admin.web.rap.internal.AdminRapApplication">
      </entrypoint>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="CloudFree Admininistration"
            class="org.eclipse.cloudfree.admin.web.rap.internal.Perspective"
            id="org.eclipse.cloudfree.admin.web.rap.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="CloudFree Admin"
            class="org.eclipse.cloudfree.admin.web.rap.internal.View"
            id="org.eclipse.cloudfree.admin.web.rap.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.rap.ui.branding">
      <branding
            defaultEntrypointId="org.eclipse.cloudfree.admin.web.rap.internal.AdminRapApplication"
            id="org.eclipse.cloudfree.admin.web.rap.branding.internal.AdminRapApplication"
            servletName="admin-rap"
            title="CloudFree Admin">
         <httpServiceSelector
               filter="(other.info=org.eclipse.cloudfree.admin.http)">
         </httpServiceSelector>
      </branding>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.cloudfree.admin.web.rap.internal.CloudFreeAdminEditorFactory"
            default="false"
            icon="icons/cloudfree.png"
            id="org.eclipse.cloudfree.admin.web.rap.widgetEditor"
            name="CloudFree Admin">
      </editor>
   </extension>
   <extension
         point="org.eclipse.cloudfree.boot.serverroles">
      <role
            defaultStart="inDevelopmentMode"
            id="admin-rap"
            name="CloudFree Admin UI (RAP based)">
         <requireBundle
               symbolicName="org.eclipse.rap.rwt">
         </requireBundle>
         <requireBundle
               symbolicName="org.eclipse.rap.ui">
         </requireBundle>
         <requireBundle
               symbolicName="org.eclipse.cloudfree.admin">
         </requireBundle>
         <requireBundle
               symbolicName="org.eclipse.cloudfree.admin.web.rap">
         </requireBundle>
         <requireBundle
               symbolicName="org.eclipse.equinox.http.registry">
         </requireBundle>
      </role>
   </extension>

</plugin>
