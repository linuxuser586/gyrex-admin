<project default="publish" basedir=".">

	<property name="module" value="org.eclipse.gyrex.admin.web.gwt.client.internal.AdminConsole"/>
	<property name="module.output" location="bin.gwt/adminconsole"/>
	<property name="sync.target" location="web/adminconsole"/>

	<target name="publish" depends="sync.module">
		<echo level="info" message="Done!" />
	</target>

	<target name="sync.module" depends="compile.module">
		<echo level="info" message="Synchronizing module files..." />
		<gwt.sync todir="${sync.target}">
			<!-- when synching it's important NOT to sync CVS info but preserve certain wanted info in the target -->
			<!-- this is especially necessary for handling the 'deferredjs' folder changes correctly in CVS -->
			<!-- the gwt.synch task is optimized for this behavior -->
			<fileset dir="${module.output}" excludes="**/CVS/**" />
			<preserveintarget casesensitive="false">
				<include name="**/CVS//**" />
			</preserveintarget>
		</gwt.sync>
	</target>

	<target name="compile.module">
		<echo level="info" message="Compiling Module" />
		<gwt.compilemodule moduleId="${module}"/>
	</target>

</project>