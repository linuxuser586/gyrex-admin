<project default="publish" basedir=".">

	<property name="module" value="org.eclipse.cloudfree.admin.web.gwt.client.internal.AdminClient"/>
	<property name="module.output" location="bin.gwt/${module}"/>
	<property name="sync.target" location="resources"/>

	<target name="publish" depends="sync.module">
		<echo level="info" message="Done!" />
	</target>

	<target name="sync.module" depends="compile.module">
		<echo level="info" message="Removing existing cache files" />
		<delete>
			<fileset dir="${sync.target}">
				<include name="*.cache.*" />
			</fileset>
		</delete>
		<echo level="info" message="Synchronizing module files..." />
		<copy todir="${sync.target}">
			<fileset dir="${module.output}" excludes="**/.svn/**,**/CVS/**" />
		</copy>
	</target>

	<target name="compile.module">
		<echo level="info" message="Compiling Module" />
		<gwt.compilemodule moduleId="${module}"/>
	</target>

</project>