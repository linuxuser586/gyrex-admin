<plugin>
   <extension
         point="org.eclipse.gyrex.server.roles">
      <role
            id="org.eclipse.gyrex.server.role.admin.ui"
            name="Gyrex System Admin">
         <requireBundle
               symbolicName="org.eclipse.gyrex.admin">
         </requireBundle>
      </role>
      <role
            id="org.eclipse.gyrex.server.role.http.jetty"
            name="Gyrex Jetty-based HTTP Engine">
         <requireBundle
               symbolicName="org.eclipse.gyrex.http.jetty">
         </requireBundle>
         <requireBundle
               symbolicName="org.eclipse.equinox.http.registry">
         </requireBundle>
      </role>
      <defaultStart
            mode="any"
            roleId="org.eclipse.gyrex.server.role.admin.ui"
            trigger="onBoot">
      </defaultStart>
      <defaultStart
            mode="development"
            roleId="org.eclipse.gyrex.server.role.http.jetty"
            trigger="onCloudConnect">
      </defaultStart>
   </extension>

</plugin>
